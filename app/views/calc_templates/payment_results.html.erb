<h1>Payment Results</h1>

<dl>
    <dt>APR</dt>
    <dd><%= number_to_percentage(@input_apr, :precision => 4) %></dd>
    <dt>Number of years</dt>
    <dd><%= @input_time %></dd>
    <dt>Principal</dt>
    <dd><%= number_to_currency(@input_pv) %></dd>
    <dt>Payment</dt>
    <dd><%= number_to_currency(@monthly_payment) %></dd>
</dl>

